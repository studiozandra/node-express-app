{{!-- conditional, with edit btn --}}
{{#each ideas}}
    <div class="card card-body mb-2">
        <h4>{{title}}</h4>
        <p>{{details}}</p>
        <a class="btn btn-dark btn-block mb-2" href="/ideas/edit/{{id}}">Edit</a>
{{!-- DELETE req using methodOverride module --}}
        <form action="/ideas/{{id}}?_method=DELETE" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" name="" id="" class="btn btn-danger btn-block" value="Delete">
        
        </form>
    </div>

{{else}}
    <p>No video ideas</p>
{{/each}}